<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Edit <%=place.name%></h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/places/<%=place._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="place[name]" value="<%=place.name%>">
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" id="image" name="image" accept="image/*">
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input class="form-control" type="text" name="place[location]" id="location" value="<%= place.location %>">
                    </div>
                     <div class="form-group">
                        <label for="description">Description</label>
                        <input class="form-control" type="text" name="place[description]" value="<%=place.description%>"> 
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/places">Go Back</a>
            </div>
    </div>
    

<% include ../partials/footer %>