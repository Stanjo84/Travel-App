<% include ../partials/header %>

    <div class="row container-shadow">
        <h1 style="text-align: center;">Create a New Entry</h1>
            <div style="width: 30%; margin: 30px auto;">
                <form action="/places" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="place[name]" placeholder="name">
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input class="form-control" type="text" name="place[location]" id="location" placeholder="ZÃ¼rich, Switzerland">
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input class="btn btn-primary form-control image-upload" type="file" id="image" name="image" accept="image/*" required>
                    </div>
                     <div class="form-group">
                         <label for="description">Description</label>
                        <textarea rows="10" cols="30" class="form-control" type="text" name="place[description]" placeholder="Description"> </textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/places">Go Back</a>
            </div>
    </div>

<% include ../partials/footer %>